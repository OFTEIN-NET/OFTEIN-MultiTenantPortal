            var yaml = document.forms["deplyForm"]["yaml"].value;
            if (yaml == "" || yaml == null) {
                alert("Yaml file must be selected.");
                return false;
            }
            alert("Yaml file must be selected." + document.getElementById('userid').value);
        }*/

