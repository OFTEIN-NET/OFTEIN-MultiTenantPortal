        </nav>
        <!-- Overlay effect when opening sidebar on small screens -->
        <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer"
             title="close side menu" id="myOverlay"></div>

        <!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:300px;margin-top:43px;">

    <!-- Header -->
    <header class="w3-container" style="padding-top:22px" style="background-color:#000066;color:white;">
        <h5><b><i class="fa fa-dashboard"></i> <%= user.displayName %> Dashboard</b></h5>
    </header>

    <div class="w3-row-padding w3-margin-bottom">
        <div class="w3-container">
            <h4 style="background-color:#3399ff;color:white;">Kubernetes Cluster(s)</h4>
            <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white">
                <tr style="background-color:white;color:#3399ff;">
                    <th>Cluster Name</th>
                    <th>Cluster Status</th>
                </tr>
                <% Cluster_List.forEach(function(Cluster_List) { %>
                    <tr>
                        <td><%= Cluster_List.cluster %></td>
                        <td
                        <% if (Cluster_List.running === true) { %>
                            style="background-color:green;color:white;">
                            Up
                        </td>
                        <% } else{ %>
                            style="background-color:red;color:white;">
                            Down
                        <% } %>
                        </td>
                    </tr>
                <% }); %>
            </table>
            <br><br><br>

            <h4 style="background-color:#3399ff;color:white;">Workloads (Pods, Deployments, Services)</h4>
            <table id="workloadsTable" class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white">
                <tr style="background-color:white;color:#3399ff;">
                    <th>Name</th>
                    <th>Creation Time</th>
                    <th>Cluster</th>
                    <th>Workload Type</th>
                    <th>Namespace</th>
                    <th>Delete</th>
                </tr>
                <% if (USER_Pod_List[0] && USER_Pod_List[0].cluster) { %>
                    <% USER_Pod_List.forEach(function(USER_Pod_List) { %>
                        <tr>
                            <td><%= USER_Pod_List.name %></td>
                            <td><%= USER_Pod_List.created %> </td>
                            <td><%= USER_Pod_List.cluster %></td>
                            <td><%= USER_Pod_List.status.kind %> </td>
                            <td><%= USER_Pod_List.status.namespace %> </td>
                            <td><input type="button" value="Delete" onclick="deleteRow(this)"></td>
                        </tr>
                    <% }); %>
                <% } %>
                <% if (USER_Deployment_List[0] && USER_Deployment_List[0].cluster) { %>
                    <% USER_Deployment_List.forEach(function(USER_Deployment_List) { %>
                        <tr>
                            <td><%= USER_Deployment_List.name %></td>
                            <td><%= USER_Deployment_List.created %> </td>
                            <td><%= USER_Deployment_List.cluster %></td>
                            <td><%= USER_Deployment_List.status.kind %> </td>
                            <td><%= USER_Deployment_List.status.namespace %> </td>
                            <td><input type="button" value="Delete" onclick="deleteRow(this)"></td>
                        </tr>
                    <% }); %>
                <% } %>
            </table>
            <br>
        </div>
        <hr>

        <div class="w3-container">
            <h4 style="background-color:#3399ff;color:white;">Create New Workload (Pod, Deployment, Service)</h4>
            <form id="deployForm" name="deployForm"
                  action="<%= pods_post_url %>"
                  method="post"
                  enctype="multipart/form-data"
                  onsubmit="return validateForm()"
                  target="_blank"
            >
                <!--target="_blank"-->
                <label for="cluster">Select Cluster for Workload Deployment (Running):</label>
                <select id="cluster" name="cluster">
                    <option value="chula">CHULA-Thailand</option>
                    <option value="gist" selected>GIST-Korea</option>
                    <option value="um">UM-Malaysia</option>
                </select>
                <br><br>
                <label for="workload_type">Select Workload Type:</label>
                <select id="workload_type" name="workload_type">
                    <option value="pod" selected>Pod</option>
                    <option value="deployment">Deployment</option>
                    <option value="service">Service</option>
                </select>
                <br><br>
                <label for="yaml">Select YAML File:</label>
                <input type="file" id="yaml" name="yaml" required>
                <input id="userid" name="userid" type="hidden" value="<%= user.id %>">
                <br><br><br>
                <input class="w3-button w3-dark-grey" type="submit" value="Deploy">
            </form>
            <p id="pods_post" style="display:none"><%= pods_post_url %></p>
            <p id="deployment_post" style="display:none"><%= deployments_post_url %></p>
            <p id="service_post" style="display:none"><%= service_post_url %></p>
        </div>
    </div>
    <% } %>
    <% } %>

    <script>
        // Get the Sidebar
        var mySidebar = document.getElementById("mySidebar");

        // Get the DIV with overlay effect
        var overlayBg = document.getElementById("myOverlay");

        // Toggle between showing and hiding the sidebar, and add overlay effect
        function w3_open() {
            if (mySidebar.style.display === 'block') {
                mySidebar.style.display = 'none';
                overlayBg.style.display = "none";
            } else {
                mySidebar.style.display = 'block';
                overlayBg.style.display = "block";
            }
        }

        // Close the sidebar with the close button
        function w3_close() {
            mySidebar.style.display = "none";
            overlayBg.style.display = "none";
        }

        //Create new workload
        function validateForm() {
            //const post_url = document.getElementById("pods_post").innerText;
            let post_url;
            const user_id = document.forms["deployForm"]["userid"].value;
            const cluster_id = document.forms["deployForm"]["cluster"].value;
            const workload_type = document.forms["deployForm"]["workload_type"].value;

            if (user_id == "" || user_id == null) {
                alert("User ID must be specified.");
                return false;
            } else {
                alert("New workload request sent to the server for User ID " + user_id);
            }

            if (workload_type == "pod") {
                post_url = document.getElementById("pods_post").innerText;
            } else if (workload_type == "deployment") {
                post_url = document.getElementById("deployment_post").innerText;
            } else {
                post_url = document.getElementById("service_post").innerText;
            }

            document.getElementById("deployForm").action = post_url + "?cluster=" + cluster_id + "&userid=" + user_id;
            //window.location.href = post_url + "?cluster=" + cluster_id + "&userid=" + user_id;
        }

        //Delete existing workload
        function deleteRow(r) {
            //var i = r.parentNode.parentNode.rowIndex;
            const user_id = document.forms["deployForm"]["userid"].value;
            let row = r.parentNode.parentNode;
            let workload = row.querySelector('td').innerHTML;
            let cluster = row.querySelector('td:nth-child(3)').innerHTML;
            let workload_type = row.querySelector('td:nth-child(4)').innerHTML.toLowerCase();

            if (workload_type == "pod") {
                alert(workload + " " + cluster + " " + user_id + " " + workload_type);
            } else if (workload_type == "deployment") {
                alert(workload + " " + cluster + " " + user_id + " " + workload_type);
            } else {
                alert(workload + " " + cluster + " " + user_id + " " + workload_type);
            }

            document.getElementById("workloadsTable").deleteRow(row.rowIndex);
        }

